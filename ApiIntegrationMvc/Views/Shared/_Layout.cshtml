<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ApiIntegrationMvc</title>
    <script type="importmap"></script>

    <link rel="preconnect" href="https://cdn.jsdelivr.net" crossorigin>
    <link rel="preconnect" href="https://cdn.datatables.net" crossorigin>


    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.datatables.net/2.1.8/css/dataTables.bootstrap5.css" />
    <link rel="stylesheet" href="https://cdn.datatables.net/responsive/3.0.3/css/responsive.bootstrap5.css" />

    <!-- PNotify CSS -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css" />

    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ApiIntegrationMvc.styles.css" asp-append-version="true" />
    
    @RenderSection("Styles", required: false)
</head>
<body>
    <div class="app-grid">
        <header class="app-header">
            <nav class="navbar navbar-expand-sm navbar-light bg-white border-bottom box-shadow-sm mb-3">
                <div class="container-fluid">
                    <!-- LEFT: brand + mobile offcanvas toggle (always visible on < md) -->
                    <div class="d-flex align-items-center gap-2">
                        <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Integration Portal</a>
                        
                        <button class="nav-link d-md-none"
                                type="button"
                                data-bs-toggle="offcanvas"
                                data-bs-target="#offcanvasSidebar"
                                aria-controls="offcanvasSidebar"
                                aria-label="Open menu"
                                data-bs-placement="bottom"
                                title="Menu">
                            <i class="bi bi-list me-1"></i>
                        </button>
                    </div>
                    <!-- CENTER: collapsing nav links -->
                    <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                        <ul class="navbar-nav flex-grow-1">
                            <li>                               
                                <!-- Desktop toggle (md+ only) -->
                                <button id="sidebarToggle"
                                        class="nav-link d-none d-md-inline-flex"
                                        type="button"
                                        aria-label="Toggle sidebar"
                                        data-bs-toggle="tooltip"
                                        data-bs-placement="bottom"
                                        title="Toggle sidebar">
                                    <i class="bi bi-layout-sidebar me-1"></i>
                                </button>
                               
                            </li>


                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">
                                    <i class="bi bi-house-door me-1"></i> Home
                                </a>
                            </li>
                           
                            
                            @if (User.IsInRole("Admin"))
                            {
                                <li class="nav-item d-none d-sm-block">
                                    <a class="nav-link text-dark" href="#" data-bs-toggle="modal" data-bs-target="#permModal">
                                        <i class="bi bi-shield-lock me-1"></i> Permissions
                                    </a>
                                </li>
                            }
                            
                           
                        </ul>
                    </div>
              
                    <!-- RIGHT: Logout (ALWAYS visible, never collapses) -->
                    <div class="d-flex ms-auto align-items-center">
                    
                        <ul class="navbar-nav ms-auto align-items-center">                           

                            <li class="nav-item d-none d-sm-block">
                                <div class="d-flex align-items-center text-dark">                                    
                                    <i class="bi bi-person-circle me-1"></i>
                                    <span class="fw-bold">@User.Identity.Name</span>
                                    <small class="text-muted ms-1">
                                        (@User.FindFirst(System.Security.Claims.ClaimTypes.Role)?.Value)
                                    </small>
                                </div>
                            </li>

                            @* Logout / Profile stays as it is *@
                            @if (User?.Identity?.IsAuthenticated == true)
                            {
                                 <li>
                                    <form asp-area="Account" asp-controller="Login" asp-action="Logout"
                                            method="post" class="d-inline">
                                        @Html.AntiForgeryToken()
                                        <button type="submit" class="btn btn-link nav-link text-dark">
                                            <i class="bi bi-box-arrow-right me-1"></i> Logout
                                        </button>
                                    </form>
                                </li>
                            }
                            else
                            {
                                <li class="nav-item">
                                    <a class="nav-link"
                                       asp-area="Account" asp-controller="Login" asp-action="Index">Login</a>
                                </li>
                            }
                        </ul>
                </div>
                </div>
            </nav>
            

        </header>
        <aside class="app-sidebar d-none d-md-block" id="appSidebar">
            @await Component.InvokeAsync("CategoryTree")
        </aside>

        <!-- Make app-main a direct child of .app-grid -->
        <main class="app-main pb-3" role="main">
            <div class="container">
                @RenderBody()
            </div>
        </main>

        <footer class="border-top text-muted app-footer">
            <div class="container">
                &copy; 2025 - Integration Portal -
                <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
            </div>
        </footer>
    </div>
    <!-- Offcanvas for mobile (place OUTSIDE .app-grid) -->
    <div class="offcanvas offcanvas-start" id="offcanvasSidebar" tabindex="-1">
        <div class="offcanvas-header">
            <h5 class="mb-0">Integration Portal</h5>
            <button class="btn-close" data-bs-dismiss="offcanvas" aria-label="Close"></button>
        </div>
        <div class="offcanvas-body p-0">
            @await Component.InvokeAsync("CategoryTree", new { model = Model })
        </div>
    </div>
    <!-- Scripts unchanged -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation/1.19.5/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/4.0.0/jquery.validate.unobtrusive.min.js"></script>

    <script src="https://cdn.datatables.net/2.1.8/js/dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/2.1.8/js/dataTables.bootstrap5.min.js"></script>
    <script src="https://cdn.datatables.net/responsive/3.0.3/js/dataTables.responsive.min.js"></script>
    <script src="https://cdn.datatables.net/responsive/3.0.3/js/responsive.bootstrap5.min.js"></script>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

    <!-- PNotify JS -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>

    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)

    <script>
        document.addEventListener("DOMContentLoaded", function () {
          const btn = document.getElementById("sidebarToggle");
          const sidebar = document.getElementById("appSidebar");
          if (btn && sidebar) {
            btn.addEventListener("click", function () {
              sidebar.classList.toggle("is-open");
            });
          }
        });
    
    </script>

    <!-- your site JS files here -->
    @* PNotify alert for TempData *@
    @{
        var error = TempData["Error"] as string;
    }

    @if (!string.IsNullOrEmpty(error))
    {
        <script>
            document.addEventListener("DOMContentLoaded", () => {
                toastr.options.closeButton = true;
                toastr.error('@error', 'Access Denied');
            });
        </script>
    }
    @await Html.PartialAsync("_PermissionSwitchModal")
</body>
</html>
